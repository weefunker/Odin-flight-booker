<%= form_for @booking, url: bookings_path do |booking| %>
  <%= booking.hidden_field :flight_id, value: @booking.flight_id %>
  <% params[:passengers].to_i.times do %>
<%= booking.fields_for :passengers, @booking.passengers.build do |p| %>
<%= p.text_field :name %>
<%= p.text_field :email %>
<br>
<% end %>
<% end %>
<%= booking.submit %>
<% end %>